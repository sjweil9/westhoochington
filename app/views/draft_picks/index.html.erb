<div class="container-fluid">
  <h6 class="mb-5">*All draft-related stats cover 2015-present only (ESPN/Sleeper years)</h6>
  <div class="row">
    <div class="col-xs-12 col-lg-6">
      <h3>Average Draft Position</h3>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">User</th>
              <th scope="col">Draft Position</th>
              <th scope="col">Pick Numbers</th>
            </tr>
          </thead>
          <tbody>
          <% @users.sort_by(&:average_draft_position).each do |user| %>
            <tr>
              <td><a href="<%= user_profile_path(user.id) %>"><%= user.random_nickname %></a></td>
              <td><%= user.average_draft_position %></td>
              <td>
                <% user.first_round_picks.sort_by(&:season_year).each_with_index do |pick, index| %>
                  <%= pick.overall_pick_number.ordinalize %> (<%= render "shared/draft_link", pick: pick %>)<%= index < user.first_round_picks.size - 1 ? ',' : '' %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-xs-12 col-lg-6">
      <h3>% Points Scored By Drafted Players (Active Games Only)</h3>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col">User</th>
            <th scope="col">Percentage from Drafted</th>
          </tr>
          </thead>
          <tbody>
            <% @users.sort_by { |u| u.calculated_stats.draft_stats["percentage_from_draft"] }.reverse.each do |user| %>
              <tr>
                <td><a href="<%= user_profile_path(user.id) %>"><%= user.random_nickname %></a></td>
                <td><%= user.calculated_stats.draft_stats["percentage_from_draft"] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <h3>Pick Distribution</h3>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col"></th>
            <% (1..12).each do |pick_number| %>
              <th><%= pick_number.ordinalize %></th>
            <% end %>
          </tr>
          </thead>
          <tbody>
            <% @users_pick_distribution.each do |user| %>
              <tr>
                <td><%= user[:nickname] %></td>
                <% (1..12).each do |pick_number| %>
                  <td class="<%= user.dig(:pick_distribution, pick_number.to_s, :color) %>">
                    <%= user.dig(:pick_distribution, pick_number.to_s, :count) %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <h3>Best PPG By Round Drafted</h3>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col"></th>
            <% (1..16).each do |pick_number| %>
              <th><%= pick_number.ordinalize %></th>
            <% end %>
          </tr>
          </thead>
          <tbody>
          <% @users_ppg_by_round.each do |user| %>
            <tr>
              <td><%= user[:nickname] %></td>
              <% (1..16).each do |round_number| %>
                <td class="<%= user.dig(:ppg_by_round, round_number.to_s, :color) %>">
                  <a class="text-dark" data-toggle="modal" data-target="#player_list<%= [user[:nickname].split(" ").join, round_number.to_s].join %>" href="#">
                    <%= user.dig(:ppg_by_round, round_number.to_s, :average) %>
                  </a>
                  <%= render "shared/player_list",
                             player_list: user.dig(:ppg_by_round, round_number.to_s, :players),
                             id: [user[:nickname].split(" ").join, round_number.to_s].join,
                             total_ppg: user.dig(:ppg_by_round, round_number.to_s, :average)
                  %>
                </td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>